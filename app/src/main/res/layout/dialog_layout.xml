<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_show"
    android:theme="@style/Theme.Lights">
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Czy na pewno chcesz usunąć?\nPrzywrócenie nie będzie możliwe."
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDeleteAlert"
                    android:background="@drawable/button_item"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonDelete"
                    android:textSize="20dp"
                    android:textColor="@color/error"
                    android:layout_marginBottom="10dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonBackAlert"
                    android:background="@drawable/button_item"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonBack"
                    android:textSize="20dp"
                    />

        </LinearLayout>



        </LinearLayout>

    </RelativeLayout>
